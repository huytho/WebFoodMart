<main class="main-content" style="padding-bottom: 100px;">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="col-lg-6">
                  
                    <form asp-action="Login" asp-controller="Home" method="post">
                         <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />@*Chuyển trang sang CheckOut*@
                        <div class="login-form p-4 border rounded shadow" style="background-color: #fff;">
                            <h4 class="login-title text-center mb-4" style="font-weight: 600;">Đăng nhập</h4>
                            @Html.Raw(ViewBag.error)
                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <label for="username" style="font-weight: 500;" name="returnUrl" value="@ViewData["ReturnUrl"]">Tên Đăng Nhập</label>
                                    <input id="username" class="form-control" type="text" placeholder="Nhập email" name="username" required>
                                </div>
                                <div class="col-lg-12 mb-3">
                                    <label for="password" style="font-weight: 500;" name="returnUrl" value="@ViewData["ReturnUrl"]">Mật khẩu</label>
                                    <input id="password" class="form-control" type="password" placeholder="Nhập mật khẩu" name="password" required>
                                </div>
                                <div class="col-md-8 mb-2">
                                    <div class="forgotton-password_info">
                                        <a  asp-action="ForgotPassword" style="color: #007bff;">Quên mật khẩu?</a>
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <button class="btn btn-custom-size btn-primary lg-size rounded-0 px-4 py-2" style="font-size: 16px; width: 50%;">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div id="error-message" class="alert alert-danger mt-3 text-center" role="alert" style="display: none; font-size: 13px;">
                        <!-- Error messages will be displayed here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

