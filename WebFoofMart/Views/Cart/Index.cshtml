@{
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<h1>Giỏ Hàng</h1>

@if(Model !=null && Model.Count > 0){

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Ảnh</th>
                <th>Price</th>
                <th>Số Lượng</th>
                <th>Thành Tiền</th>
                <th>Chức Năng</th>

   
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
              <tr>
                  <td>@item.CartName</td>
                  <td><img src="@Url.Content("/upload/product/" + item.Image)" width="100px" alt="@item.CartName" /></td>
                  <td>@item.SalePrice đ</td>
                  <td><input type="number" min="1" value="@item.Soluong" class="" data-Product-id="@item.CartId"/></td>
                    <td>@item.ThanhTien đ</td>
                    <td>
                        <a onclick="return confirm('Bạn có chắc xoá không?')" asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.CartId" style="color:red">
                           xoá
                        </a>
                    </td>

              </tr>
            }
         
        </tbody>
     
  
    </table>
    <div class="button-container">
        <a asp-action="CheckOut" asp-controller="Cart" class="btn btn-success text-info" style="background-color:orangered;">Mua</a>
        <a asp-action="" class="btn btn-success text-info" style="background-color:cornflowerblue;">Thêm vào Giỏ Hàng</a>
    </div>
}
else
{
    <p>Giỏ hàng của bạn đang trống!</p>
}